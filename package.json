{
  "name": "jump-to-sass-variable",
  "displayName": "Jump to SASS Variable",
  "description": "Jump to SASS variable definitions with keyboard shortcuts",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:scss",
    "onLanguage:sass"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "jumpToSassVariable.jumpToDefinition",
        "title": "Jump to SASS Definition"
      }
    ],
    "configuration": {
      "title": "Jump to SASS Variable",
      "properties": {
        "jumpToSassVariable.showAllReferences": {
          "type": "boolean",
          "default": false,
          "description": "Show all references instead of jumping directly to same-level definition"
        }
      }
    },
    "menus": {
      "editor/context": [
        {
          "command": "jumpToSassVariable.jumpToDefinition",
          "when": "editorTextFocus && editorLangId =~ /^s(c|a)ss$/"
        }
      ]
    },
    "keybindings": [
      {
        "command": "jumpToSassVariable.jumpToDefinition",
        "key": "cmd+click",
        "mac": "cmd+click",
        "win": "ctrl+click",
        "linux": "ctrl+click",
        "when": "editorTextFocus && editorLangId =~ /^s(c|a)ss$/"
      }
    ],
    "languages": [
      {
        "id": "scss",
        "extensions": [".scss"],
        "aliases": ["SCSS", "scss"]
      },
      {
        "id": "sass",
        "extensions": [".sass"],
        "aliases": ["SASS", "sass"]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/glob": "^7.1.3",
    "@types/node": "^14.17.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "typescript": "^4.3.2"
  },
  "dependencies": {
    "sass": "^1.43.4"
  }
} 